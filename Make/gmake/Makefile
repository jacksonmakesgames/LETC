# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug_x86
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug_x86)
  LETC_Core_config = debug_x86
  PhysicsDemo_config = debug_x86
  SimpleGame_config = debug_x86
endif
ifeq ($(config),release_x86)
  LETC_Core_config = release_x86
  PhysicsDemo_config = release_x86
  SimpleGame_config = release_x86
endif

PROJECTS := LETC-Core PhysicsDemo SimpleGame

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

LETC-Core:
ifneq (,$(LETC_Core_config))
	@echo "==== Building LETC-Core ($(LETC_Core_config)) ===="
	@${MAKE} --no-print-directory -C . -f LETC-Core.make config=$(LETC_Core_config)
endif

PhysicsDemo: LETC-Core
ifneq (,$(PhysicsDemo_config))
	@echo "==== Building PhysicsDemo ($(PhysicsDemo_config)) ===="
	@${MAKE} --no-print-directory -C . -f PhysicsDemo.make config=$(PhysicsDemo_config)
endif

SimpleGame: LETC-Core
ifneq (,$(SimpleGame_config))
	@echo "==== Building SimpleGame ($(SimpleGame_config)) ===="
	@${MAKE} --no-print-directory -C . -f SimpleGame.make config=$(SimpleGame_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f LETC-Core.make clean
	@${MAKE} --no-print-directory -C . -f PhysicsDemo.make clean
	@${MAKE} --no-print-directory -C . -f SimpleGame.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug_x86"
	@echo "  release_x86"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   LETC-Core"
	@echo "   PhysicsDemo"
	@echo "   SimpleGame"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"